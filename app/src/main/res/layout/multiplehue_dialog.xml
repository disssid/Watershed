<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multiplehue_layoutdialog" android:layout_width="match_parent" android:layout_height="match_parent">

    <io.apptik.widget.MultiSlider
        android:id="@+id/hueRangeSlider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/multiHueMin1"
        android:layout_below="@+id/hueRangeSlider1"
        android:layout_alignLeft="@id/hueRangeSlider1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/multiHueMax1"
        android:layout_below="@+id/hueRangeSlider1"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@id/hueRangeSlider1"/>

    <TextView
        android:id="@+id/multiHueStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBottom="@+id/multiHueMin1"
        android:layout_centerHorizontal="true"/>

    <io.apptik.widget.MultiSlider
        android:id="@+id/hueRangeSlider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/multiHueMin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hueRangeSlider2"
        android:layout_alignLeft="@id/hueRangeSlider2"
        android:text="TextView" />

    <TextView
        android:id="@+id/multiHueMax2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/hueRangeSlider2"
        android:layout_below="@+id/hueRangeSlider2"
        android:text="TextView" />

    <TextView
        android:id="@+id/multiHueStatus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hueRangeSlider2"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

</RelativeLayout>